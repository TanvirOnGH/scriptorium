# <https://editorconfig.org>

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size=4

[*.nix]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[*.rs]
indent_style = tab
indent_size = 4

[*.nim]
indent_style = space
indent_size = 2

[*.lua]
indent_style = tab
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[*.ts]
indent_style = space
indent_size = 2

[*.rb]
indent_style = space
indent_size = 2

[*.go]
indent_style = space
indent_size = 2

[*.c,*.h,*.cpp,*.hpp]
indent_style = tab
indent_size = 4

[*.java]
indent_style = tab
indent_size = 4

[*.scala]
indent_style = tab
indent_size = 2

[*.sh]
indent_style = tab
indent_size = 4

[*.fish]
indent_style = space
indent_size = 4

[*.nu]
indent_style = space
indent_size = 2

[*.toml]
indent_style = space
indent_size = 2

[{package.json,.travis.yml,*.{yaml,yml}}]
indent_style = space
indent_size = 4
